################################################################################
#  HTTP  →  qr.girumed.ru:8081   (plain‐text, редирект в HTTPS)
################################################################################
qr.girumed.ru:8081 {
    # редирект всех запросов на HTTPS‐порт
    redir https://qr.girumed.ru:8443{uri}
}

################################################################################
#  HTTPS →  qr.girumed.ru:8443   (проксируем в qrbot:8080)
#  tls internal — самоподписанный сертификат
################################################################################
qr.girumed.ru:8443 {
    tls internal

    @health path /health
    respond @health 200

    encode zstd gzip
    reverse_proxy qrbot:8080
}