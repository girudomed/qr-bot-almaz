# HTTP на внешнем порту 8081 — plain‐text, без TLS и без ACME
qr.girumed.ru:8081 {
    tls off

    @health path /health
    respond @health 200

    encode zstd gzip
    reverse_proxy qrbot:8080
}

# HTTPS на внешнем порту 8443 — самоподписанный cert
qr.girumed.ru:8443 {
    tls internal

    @health path /health
    respond @health 200

    encode zstd gzip
    reverse_proxy qrbot:8080
}