# syntax=docker/dockerfile:1

###############################################################################
# 1) Базовый минимальный образ
###############################################################################
FROM python:3.11-slim

###############################################################################
# 2) Системные зависимости (только то, что реально нужно в рантайме)
#    • libzbar0 — динамическая библиотека для pyzbar
#    • curl     — понадобится HEALTHCHECK-у
###############################################################################
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
        libzbar0 \
        curl \
 && rm -rf /var/lib/apt/lists/*

###############################################################################
# 3) Создаём непривилегированного пользователя + рабочую директорию
###############################################################################
RUN useradd -m -U qrbot
WORKDIR /app

###############################################################################
# 4) Python-зависимости (кэшируем слоем) + prod-сервер Gunicorn
###############################################################################
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
 && pip install --no-cache-dir -r requirements.txt gunicorn

###############################################################################
# 5) Копируем исходный код и передаём права юзеру qrbot
###############################################################################
COPY --chown=qrbot:qrbot . .

###############################################################################
# 6) Переключаемся на non-root, задаём переменные окружения
###############################################################################
USER qrbot
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1        # не писать .pyc в контейнер

###############################################################################
# 7) Порт + Health-check
###############################################################################
EXPOSE 8080
HEALTHCHECK --interval=30s --timeout=3s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

###############################################################################
# 8) Точка входа — Gunicorn
#    main:app  → файл main.py, объект Flask = app
###############################################################################
CMD ["gunicorn", "-w", "2", "-k", "gthread", "-t", "30", "-b", "0.0.0.0:8080", "main:app"]